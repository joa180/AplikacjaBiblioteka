@page
@model LibSys.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Utwórz konto";
}

<h1>@ViewData["Title"]</h1>
<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-floating mb-3">
        <input asp-for="Input.Email" class="form-control" placeholder="Email" />
        <label asp-for="Input.Email">Email</label>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="Input.Password" type="password" class="form-control" placeholder="Hasło" />
        <label asp-for="Input.Password">Hasło</label>
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Potwierdź hasło" />
        <label asp-for="Input.ConfirmPassword">Potwierdź hasło</label>
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>

    <!-- NOWE: dane czytelnika -->
    <div class="form-floating mb-3">
        <input asp-for="Input.Name" class="form-control" placeholder="Imię i nazwisko" />
        <label asp-for="Input.Name">Imię i nazwisko</label>
        <span asp-validation-for="Input.Name" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="Input.City" class="form-control" placeholder="Miasto" />
        <label asp-for="Input.City">Miasto</label>
        <span asp-validation-for="Input.City" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="Input.Code" class="form-control" placeholder="Kod pocztowy" />
        <label asp-for="Input.Code">Kod pocztowy</label>
        <span asp-validation-for="Input.Code" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="Input.Street" class="form-control" placeholder="Ulica i numer" />
        <label asp-for="Input.Street">Ulica i numer</label>
        <span asp-validation-for="Input.Street" class="text-danger"></span>
    </div>
    <!-- /NOWE -->

    <button type="submit" class="btn btn-primary">Zarejestruj się</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
