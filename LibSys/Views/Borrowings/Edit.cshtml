@model LibSys.Models.Entities.Borrowing
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Edycja wypożyczenia";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="BookId" class="form-label"></label>
                <select asp-for="BookId" class="form-select" asp-items="ViewBag.BookId">
                    <option value="">-- wybierz książkę --</option>
                </select>
                <span asp-validation-for="BookId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="BorrowDate" class="form-label"></label>
                <input asp-for="BorrowDate" class="form-control" />
                <span asp-validation-for="BorrowDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ReturnDate" class="form-label"></label>
                <input asp-for="ReturnDate" class="form-control" />
                <span asp-validation-for="ReturnDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ReaderId" class="form-label"></label>
                <select asp-for="ReaderId" class="form-select" asp-items="ViewBag.ReaderId">
                    <option value="">-- wybierz czytelnika --</option>
                </select>
                <span asp-validation-for="ReaderId" class="text-danger"></span>
            </div>

            <div class="d-flex align-items-center">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-save"></i> Zapisz
                </button>
                <a asp-action="Index" class="btn btn-link">
                    <i class="bi bi-arrow-left"></i> Anuluj
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
