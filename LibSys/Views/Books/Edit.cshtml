@using LibSys.Models.Entities
@model Book

@{
    ViewData["Title"] = "Edytuj książkę";
}

<h1 class="mb-4">
    <i class="bi bi-pencil-square me-2"></i>
    @ViewData["Title"]
</h1>

<div class="card">
    <div class="card-body">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="BookDefinitionId" class="form-label"></label>
                <select asp-for="BookDefinitionId" class="form-select" asp-items="ViewBag.BookDefinitionId"></select>
                <span asp-validation-for="BookDefinitionId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Comment" class="form-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Status" class="form-label"></label>
                <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<BookStatus>()"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label class="form-label">Podmień okładkę (plik)</label>
                <input type="file" name="coverImage" class="form-control" />
            </div>

            <div class="d-flex">
                <button type="submit" class="btn btn-success me-2">
                    <i class="bi bi-save me-1"></i> Zapisz
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left-circle me-1"></i> Anuluj
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
