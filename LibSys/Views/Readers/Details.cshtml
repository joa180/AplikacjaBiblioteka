@model LibSys.Models.Entities.Reader

@{
    ViewData["Title"] = "Szczegóły czytelnika";
}

<div class="card mb-4">
    <div class="card-header">
        <h2 class="h5 mb-0">Czytelnik</h2>
    </div>
    <div class="card-body">
        <dl class="row mb-3">
            <dt class="col-sm-3">Imię i nazwisko</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Miasto</dt>
            <dd class="col-sm-9">@Model.City</dd>

            <dt class="col-sm-3">Kod pocztowy</dt>
            <dd class="col-sm-9">@Model.Code</dd>

            <dt class="col-sm-3">Ulica i numer</dt>
            <dd class="col-sm-9">@Model.Street</dd>
        </dl>

        <div class="mt-3">
            <a asp-action="Index" class="btn btn-secondary">← Powrót do listy</a>

            @* Edytuj/Usuń tylko dla Admina *@
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Edit"
                   asp-route-id="@Model.Id"
                   class="btn btn-primary ms-2">
                    Edytuj
                </a>
                <a asp-action="Delete"
                   asp-route-id="@Model.Id"
                   class="btn btn-danger ms-2">
                    Usuń
                </a>
            }
        </div>
    </div>
</div>
