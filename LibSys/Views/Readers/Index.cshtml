@model IEnumerable<LibSys.Models.Entities.Reader>

@{
    ViewData["Title"] = "Czytelnicy";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-success mb-3">
        <i class="bi bi-person-plus"></i> Dodaj czytelnika
    </a>
</p>

<table id="dataTable" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.First().Name)</th>
            <th>@Html.DisplayNameFor(m => m.First().City)</th>
            <th>@Html.DisplayNameFor(m => m.First().Street)</th>
            <th>@Html.DisplayNameFor(m => m.First().Code)</th>
            <th class="text-center">Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.City</td>
                <td>@item.Street</td>
                <td>@item.Code</td>
                <td class="text-center">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">
                        Szczegóły
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">
                        Edytuj
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                        Usuń
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/pl.json'
                }
            });
        });
    </script>
}
